{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info }} <br />
{{ flash.error }} <br />

{% if user %}
    <table>
        <tr>
            <th>Id:</th>
            <td>{{ user.userid }}</td>
            </tr><tr>
            <th>Username:</th>
            <td>{{ user.username }}</td>
            </tr><tr>
            <th>Full Name:</th>
            <td>{{ user.fullname }}</td>
            </tr><tr>
            <th>Address:</th>
            <td>{{ user.address }} </td>
            </tr><tr>
            <th>Postcode:</th>
            <td>{{  user.postcode }}</td>
            </tr><tr>
            <th>Hash:</th>
            <td><!-- {{ user.hash|raw }} -->********************************(not shown)</td> {# VULN: Hash of admin password in HTML-comment  (G21_0005) #}
            </tr><tr>
            <th>Email:</th>
            <td>{{ user.email }}</td>
            </tr><tr>
            <th>Bio:</th>
            <td>{{ user.bio}}</td>
            </tr><tr>
            <th>Age:</th>
            <td>{{ user.age }}</td>
            </tr><tr>
	        <th>Bank Account Number:</th>
            <td>{{ user.bankAccNum }}</td>
            </tr>
            {% if (user.isDoctor == 0 and user.bankAccNum|length > 0) or user.moneySpent > 0 %}	        
            <tr>
	        <th>Money spent:</th>
            <td>{{ user.moneySpent }}</td>
            </tr>
            {% endif %}
            {% if user.isDoctor == 1 %}	        
            <tr>
	        <th>Money received (NOK):</th>
            <td>{{ user.moneyReceived }}</td>
            </tr>
            {% endif %}
    </table>
{% else %}
    Could not find a user with username "{{ username }}".
{% endif %}

{% endblock %}
