{% extends 'base.twig' %}

{% block content %}


    <h2>Posts</h2>

    {% for post in posts %}
        {% if user.isDoctor == 0 %}
            <div class="post">
                <a href="/posts/{{ post.postId }}">{{ post.title}}</a> by  <a href="/user/{{ post.author }}"> {{ post.author }}</a>. Posted on {{ post.date }}
            </div>
        {% else %}
            {% if post.pay %}
                <div class="post">
                    <a href="/posts/{{ post.postId }}">{{ post.title}}</a> by  <a href="/user/{{ post.author }}"> {{ post.author }}</a>. Posted on {{ post.date }}
                </div>
            {% endif %}
        {% endif %}

    {% else %}
        There are no posts as of yet
    {% endfor %}

{% endblock %}
