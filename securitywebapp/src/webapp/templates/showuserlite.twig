{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info }} <br />
{{ flash.error }} <br />

{% if user %}
    <table>
        <tr>
            <th>Id</th>
            <th>{{ user.userid|raw }}</th>  {#  The variable shouldn't be escaped  #}
            <tr></tr>
            <th>Username:</th>
            <td>{{ user.username|raw }}</th>  {#  The variable shouldn't be escaped  #}
            <tr></tr>
            <th>Bio:</th>
            <td>{{ user.bio|raw }}</td>  {#  The variable shouldn't be escaped  #}
            <tr></tr>
            <th>Age:</th>
            <td>{{ user.age|raw }}</td>  {#  The variable shouldn't be escaped  #}
       }     <tr></tr>




    </table>
{% else %}
    Could not find a user with username "{{ username|raw }}".  
{% endif %}

{% endblock %}
